# Supabase
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_KEY=your_supabase_service_key

# Farcaster
FARCASTER_HUB_URL=hub-grpc.pinata.cloud
NEXT_PUBLIC_FARCASTER_CLIENT_ID=your_farcaster_client_id

# OnchainKit (Coinbase)
NEXT_PUBLIC_ONCHAINKIT_API_KEY=your_onchainkit_api_key

# Base RPC
NEXT_PUBLIC_BASE_RPC_URL=https://mainnet.base.org

# Resend (for email notifications)
RESEND_API_KEY=your_resend_api_key

# Smart Contract Addresses (for payments)
NEXT_PUBLIC_PAYMENT_CONTRACT_ADDRESS=0x...
NEXT_PUBLIC_USDC_ADDRESS=0x833589fCD6eDb6E08f4c7C32D4f71b54bdA02913

# API Keys for additional services
COINGECKO_API_KEY=optional_for_price_data
ETHERSCAN_API_KEY=optional_for_tx_verification

# App URLs
NEXT_PUBLIC_APP_URL=https://fardrops.xyz
NEXT_PUBLIC_MINI_APP_URL=https://app.fardrops.xyz

# Feature Flags
NEXT_PUBLIC_ENABLE_WAITLIST=true
NEXT_PUBLIC_ENABLE_PAYMENTS=false
NEXT_PUBLIC_MAINTENANCE_MODE=false